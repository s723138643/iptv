<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyTVBoxOS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TVButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_borderless</item>
    </style>
    <style name="PlayerButton">
        <item name="android:background">@drawable/btn_borderless_player</item>
    </style>
    <style name="LiveButton">
        <item name="android:background">@drawable/btn_borderless_live</item>
    </style>
    <style name="SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:background">@drawable/bg_seekbar</item>
    </style>
    <style name="ListItem">
        <item name="android:background">@drawable/bg_list_item</item>
    </style>
</resources>